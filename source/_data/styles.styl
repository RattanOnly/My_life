// Custom styles for NexT

// Enlarge left navigation menu text for better readability.
.site-nav .menu-item a,
.site-nav .menu-item span.exturl {
  font-size: 14px;
  line-height: 1.8;
}

// Customize site title font appearance.
.site-brand .site-title {
  font-family: "Times New Roman", Georgia, serif;
  font-size: 56px;
  font-weight: 700;
  letter-spacing: 2px;
  text-transform: none;
}

// Limit post image width on larger screens.
.post-body img {
  height: auto;
  // Fallback (older browsers): images never exceed viewport height.
  max-height: 70vh;
  // Modern browsers: additionally cap absolute height.
  max-height: min(70vh, 520px);
}

@media (min-width: 768px) {
  .post-body img {
    max-width: 80%;
  }
}
